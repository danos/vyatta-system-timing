		description "Initial revision of version 1.";
	}

	typedef one-pps-source {
		description "The source of input 1PPS";
		type enumeration {
			enum "GPS-1PPS" {
				description  "1PPS from GPS";
				configd:help "1PPS from GPS";
			}
			enum "PTP-1PPS" {
				description "1PPS from PTP";
				configd:help "1PPS from PTP";
			}
			enum "SMA-1PPS" {
				description "1PPS from SMA interface";
				configd:help "1PPS from SMA interface";
			}
			enum "ToD-1PPS" {
				description "1PPS from TOD RJ45 interface";
				configd:help "1PPS from TOD RJ45 interface";
			}
		}
	}
	typedef frequency-source {
		description "The source of input frequency";
		type enumeration {
			enum "GPS" {
				description "Frequency from GPS";
				configd:help "Frequency from GPS";
			}
			enum "SYNCE" {
				description "Frequency from SyncE";
				configd:help "Frequency from SyncE";
			}
			enum "PTP" {
				description "Frequency from PTP";
				configd:help "Frequency from PTP";
			}
			enum "SMA" {
				description "Frequency from SMA interface";
				configd:help "Frequency from SMA interface";
			}
			enum "BITS" {
				description "Frequency from BITS interface";
				configd:help "Frequency from BITS interface";
			}
		}
	}
	typedef type-weighted-priority {
		description "Weighted priority";
		type uint16 {
			range 1..100;
		}
	}
	grouping source-status {
		leaf source {
			description "Current input source";
			type string;
		}
		leaf operating-status {
			description "Operating status of current input source";
			type string;
		}
		leaf-list priority {
			description "Priority list of the sources";
			type string;
		}
	}

	grouping system-timing {
		container timing {
			description "System timing configuration";
			configd:help "System timing configuration";
			container timing-source {
				description "Timing source configuration";
				configd:help "Timing source configuration";
				list one-pps {
					description "1PPS source configuration";
					configd:help "1PPS source configuration";
					key src-name;
					leaf src-name {
						description "Source of input 1PPS";
						configd:help "Source of input 1PPS";
						type one-pps-source;
					}
					leaf weighted-priority {
						description "Weighted priority";
						configd:help "Weighted priority";
						type type-weighted-priority;
					}
				}
				list frequency {
					description "Frequency source configuration";
					configd:help "Frequency source configuration";
					key src-name;
					leaf src-name {
						description "Source of input frequency";
						configd:help "Source of input frequency";
						type frequency-source;
					}
					leaf weighted-priority {
						description "Weighted priority";
						configd:help "Weighted priority";
						type type-weighted-priority;
					}
				}
			}
			container timing-status {
				description "System timing status";
				config false;
				container timing-source {
					description "System timing-source state";
					container frequency-status {
						description "Frequency source status";
						uses source-status;
					}
					container one-pps-status {
						description "1PPS source status";
						uses source-status;
					}
				}
			}
		}
	}
	
	augment /system:system {
		uses system-timing;
	}
}
